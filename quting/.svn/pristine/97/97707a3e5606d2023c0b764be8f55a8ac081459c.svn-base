<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F1F2F2">
    
 	<ImageView
       android:id="@+id/nav_bg"
       android:layout_marginTop="0dip"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/navi_background2"/>
 	
	<TextView
       android:layout_gravity="top|center"
       android:layout_marginTop="3dip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/fav" 
       android:textSize="24dp"
       android:textColor="#ffffff"
       android:textStyle="bold"/>
    
	<ImageView
       android:id="@+id/nav_back"
       android:layout_gravity="top|left"
       android:layout_marginTop="-5dip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/backitem2"
       android:clickable="true"
       android:onClick="onBackMainClicked"/>
	
	<com.example.quting.SegmentBar
        android:id="@+id/segment_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="50dip"
        android:background="#DCDCDC"/>
	
	<ListView 
        android:id="@+id/fav_listview" 
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent" 
	    android:cacheColorHint="#00000000"
	    android:layout_gravity="top|center"
	    android:layout_marginTop="90dip"
		android:gravity="left|center"
		android:listSelector="#00000000"
		android:scrollbars="none"
		android:divider="@drawable/line_search"        
		android:dividerHeight="1dp"/>
    
</FrameLayout>